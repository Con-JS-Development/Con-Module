{
    "compilerOptions": {
        "module": "es2022",
        "target": "ESNext",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "strict": true,
        "typeRoots": ["./node_modules/"],
        "types": [
            "@minecraft/server",
            "@minecraft/server-ui"
        ]
    },
    "include": ["src/","node_modules/nbt-serializer/"],
    "exclude": ["node_modules", "dist", "tasks"]
}
  