{
    "compilerOptions": {
      "module": "es2020",
      "target": "es6",
      "lib": ["es2021"],
      "moduleResolution": "node",
      "downlevelIteration": true,
      "allowJs": true,
      "checkJs": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "baseUrl": "./core",
      "resolveJsonModule": true,
      "strict": true,
      "typeRoots": ["./node_modules/"],
      "types": [
        "@minecraft/server",
        "@minecraft/server-ui"
      ]
    },
    "include": ["src/**/*.ts", "core/**/*.ts"],
    "exclude": ["node_modules", "dist", "tasks"]
}
  